{
    "name": "Work Easy",
    "description": "Extension that supports font, background color, and PDF font changing.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "/js/background.js"
    },
    "permissions": ["storage", "activeTab", "scripting", "fontSettings", "tabs"],
    "action": {
        "default_title": "Work Easy",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/WE16x16.png",
            "32": "/images/WE32x32.png",
            "48": "/images/WE48x48.png",
            "128": "/images/WE128x128.png"
        }
    },
    "icons": {
        "16": "/images/WE16x16.png",
        "32": "/images/WE32x32.png",
        "48": "/images/WE48x48.png",
        "128": "/images/WE128x128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
         "matches": ["<all_urls>"],
         "all_frames": true,
         "css": ["/css/fonts.css"],
         "js": ["/js/contentScript.js"]
        }
    ]
}